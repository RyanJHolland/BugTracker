<!DOCTYPE html>
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta charset="utf-8" />
	<meta name="google" content="notranslate">
	<meta http-equiv="Content-Language" content="en">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Bug Tracker</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3 text-color dark-bg">
			<div class="container">
				<!-- <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BugTracker</a> -->
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
								aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
								<strong>
									Projects
								</strong>
							</a>
						</li>
						@if (Model != null)
						{<!-- If this is a bug or comment, link to the project it's under: -->
											@if (Model.GetType().GetProperty("Project") != null)
											{
							<text>
								<li class="nav-item nav-link">></li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-controller="Projects" asp-action="View" asp-route-id="@Model.Project.Id">
										<strong>
											@Model.Project.Name
										</strong>
									</a>
								</li>
							</text>} <!-- If this is a comment, link to the bug it's under: -->
															@if (Model.GetType().GetProperty("Bug") != null)
															{
											<text>
												<li class="nav-item nav-link">></li>
												<li class="nav-item">
													<a class="nav-link text-dark" asp-controller="Bugs" asp-action="View" asp-route-id="@Model.Bug.Id">
														<strong>
															@Model.Bug.Title
														</strong>
													</a>
												</li>
											</text>}}
						<!--
						<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						-->
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3 background text-color">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<!--
		<div class="container">
				&copy; 2021 - BugTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
		-->
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>