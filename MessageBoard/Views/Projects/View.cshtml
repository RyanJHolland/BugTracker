@using System.Linq;
@model TicketTracker.ViewModels.ViewProjectVM

@{ ViewData["Title"] = Model.Project.Name; }

<div class="main">
	<div class="row">
		<div class="col">
			<h2 class="mb-header">
				@Model.Project.Name 
			</h2>
			<div class="d-flex align-items-center" style="height:50%;">
				<partial name="ViewComponents/_newTicketButton.cshtml" />
				<partial name="ViewComponents/_editProjectButton.cshtml" />
			</div>
		</div>
		<div class="col d-flex justify-content-end align-self-center">
			<partial name="ViewComponents/_filterMenu.cshtml" />
		</div>
	</div>

	<div class="row">
		<div class="col">
			<partial name="ViewComponents/_ticketCount.cshtml" />
		</div>
		<div class="col d-flex justify-content-center">	
			<partial name="ViewComponents/_pageArrows.cshtml" />
		</div>
		<div class="col d-flex justify-content-end">
			@* <partial name="ViewComponents/_pageSize.cshtml" />*@
			<partial name="ViewComponents/_searchInput.cshtml" /> 
			<!--button that clears all filters -->
			<a href="?" history="set" class="btn btn-default p-0 m-0" label="Reset filters to default"><i class="fa fa-times"></i> Reset Filters</a>
		</div>
	</div>

	<table class="table">
		<partial name="ViewComponents/_tableHeader.cshtml" />

		<partial name="ViewComponents/_tableRows.cshtml" />
	</table>

	<div class="col d-flex justify-content-center">	
		<partial name="ViewComponents/_pageArrows.cshtml" />
	</div>

</div>