@model BugTracker.ViewModels.ProjectBugCommentViewModel

@{ ViewData["Title"] = "Comment to bug"; }

<h2 class="mb-header">
	Comment to bug
</h2>

<div class="row">
	<div class="col">

		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<textarea asp-for="Comment.Body" class="form-control" rows="10" cols="75"></textarea>
				<span asp-validation-for="Comment.Body" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a asp-controller="Bugs" asp-action="View" asp-route-id="@Model.Bug.Id">Cancel</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}