@model BugTracker.ViewModels.ProjectBugCommentViewModel

@{ ViewData["Title"] = "Edit comment"; }

<div class="bug-container">
	<div class="row">
		<div class="col">
			<form asp-action="Edit" asp-route-id="@Model.Comment.Id">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Comment.Id" />
				<div class="form-group">
					<label asp-for="Comment.Body" class="control-label"></label>
					<textarea asp-for="Comment.Body" class="form-control" rows="10" cols="75"></textarea>
					<span asp-validation-for="Comment.Body" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
					<a asp-controller="Comments" asp-action="View" asp-route-id="@Model.Comment.Id" class="btn btn-secondary">
						Cancel
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}