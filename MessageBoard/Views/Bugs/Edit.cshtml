@model BugTracker.ViewModels.ProjectBugViewModel

@{ ViewData["Title"] = "Edit bug"; }

<div class="bug-container">
	<div class="row">
		<div class="col">
			<form asp-action="Edit" asp-route-id="@Model.Bug.Id">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Bug.Id" />
				<div class="form-group">
					<label asp-for="Bug.Title" class="control-label"></label>
					<input asp-for="Bug.Title" class="form-control" />
					<span asp-validation-for="Bug.Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Bug.Body" class="control-label"></label>
					<textarea asp-for="Bug.Body" class="form-control" rows="10" cols="75"></textarea>
					<span asp-validation-for="Bug.Body" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
					<a asp-controller="Bugs" asp-action="View" asp-route-id="@Model.Bug.Id" class="btn btn-secondary">
						Cancel
					</a>
				</div>
			</form>
		</div>
	</div>
</div>


	@section Scripts {
		@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}
