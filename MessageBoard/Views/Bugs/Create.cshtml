@model BugTracker.ViewModels.ProjectBugViewModel

@{ ViewData["Title"] = "New bug"; }

<h2 class="mb-header">
	Create new bug
</h2>

<form asp-action="Create" asp-route-ParentProjectId="@Model.Project.Id">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Bug.Title" class="control-label"></label>
		<input asp-for="Bug.Title" class="form-control" />
		<span asp-validation-for="Bug.Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Bug.Body" class="control-label"></label>
		<textarea asp-for="Bug.Body" class="form-control" rows="10" cols="75"></textarea>
		<span asp-validation-for="Bug.Body" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
		<a asp-controller="Projects" asp-action="View" asp-route-id="@Model.Project.Id" class="btn btn-secondary">Cancel</a>
	</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}