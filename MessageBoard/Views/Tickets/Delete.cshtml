@model TicketTracker.ViewModels.EditTicketVM

@{ ViewData["Title"] = "Delete Ticket"; }


<h3>
	<span class="alert-danger">
		Are you sure you want to delete the ticket "@Model.Ticket.Title"?
	</span>
</h3>
<dl class="row">
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Ticket.Title)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Ticket.Title)
	</dd>
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Ticket.Body)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Ticket.Body)
	</dd>
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Ticket.UserName)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Ticket.UserName)
	</dd>
	<dt class="col-sm-2">
		@Html.DisplayNameFor(model => model.Ticket.CreationTime)
	</dt>
	<dd class="col-sm-10">
		@Html.DisplayFor(model => model.Ticket.CreationTime)
	</dd>
</dl>

<form asp-action="Delete">
	<input type="hidden" asp-for="Ticket.Id" />
	<input type="submit" value="Delete" class="btn btn-danger" />
	<a asp-controller="Tickets" asp-action="View" asp-route-id="@Model.Ticket.Id">
		Cancel
	</a>
</form>

